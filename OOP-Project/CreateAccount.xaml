        <TextBox x:Name="txtEmail_Copy2" HorizontalAlignment="Left" Height="25" Margin="10,384,0,0" TextWrapping="Wrap" Text="..." VerticalAlignment="Top" Width="114" FontSize="16"/>
        <ComboBox x:Name="cmbCounty" HorizontalAlignment="Left" Margin="10,441,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Label Content="County" HorizontalAlignment="Left" Margin="10,409,0,0" VerticalAlignment="Top" FontSize="16"/>

    </Grid>
