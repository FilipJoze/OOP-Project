<Window x:Class="OOP_Project.ActionMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Project"
        mc:Ignorable="d"
        Title="ActionMenu" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="ActionStackPanel" HorizontalAlignment="Left" Height="40" Margin="0,0,-0.4,0" VerticalAlignment="Top" Width="794" Background="#FF00D6FF" OpacityMask="#FF00FAFF">
            <Menu x:Name="ActionMenu1" Height="40" Margin="0,0,-0.4,0" OpacityMask="#7F000000">
                <MenuItem Header="Account" Height="40" Width="90" Background="#FF00C4EA">
                    <MenuItem.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Transfer Funds"/>
                            <MenuItem Header="filler 1"/>
                            <MenuItem Header="filler 2"/>
                            <MenuItem Header="filler 3"/>
                        </ContextMenu>
                    </MenuItem.ContextMenu>
                    
                </MenuItem>
                <Button x:Name="SettingsButton" Content="Settings" Height="40" Background="#FF00C4EA" Width="90"/>
            </Menu>
            
        </StackPanel>

    </Grid>
</Window>
